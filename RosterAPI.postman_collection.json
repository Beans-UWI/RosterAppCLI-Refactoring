							"    pm.expect(jsonData['access_token']).to.be.a('string');\r",
							"\r",
							"    const token = jsonData['access_token'];\r",
							"    \r",
							"    // Keep a generic token if you still want it\r",
							"    pm.environment.set('access_token', token);\r",
							"\r",
							"    // Decode JWT payload\r",
							"    const payload = JSON.parse(atob(token.split('.')[1]));\r",
							"    const user_id = payload.sub;\r",
							"    const role = payload.role;\r",
							"    const username = payload.username;\r",
							"\r",
							"    // Store IDs and role-specific tokens\r",
							"    if (role === 'admin') {\r",
							"        pm.environment.set('admin_id', user_id);\r",
							"        pm.environment.set('admin_token', token);\r",
							"    } else if (role === 'staff') {\r",
							"        pm.environment.set('staff_id', user_id);\r",
							"        pm.environment.set('staff_token', token);\r",
							"    }\r",
							"\r",
							"    console.log(`Logged in as ${username || 'unknown'} (${role}) with ID: ${user_id}`);\r",
							"});\r",
							"\r",
							"pm.test(\"Login response format is correct\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.have.property('access_token');\r",
