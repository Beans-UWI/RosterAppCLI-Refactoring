						"exec": [
							"pm.test(\"Schedule created successfully (200 + JSON)\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"    pm.response.to.be.json;\r",
							"\r",
							"    const json = pm.response.json();\r",
							"\r",
							"    pm.expect(json).to.have.property(\"id\");\r",
							"    pm.expect(json).to.have.property(\"name\");\r",
							"    pm.expect(json).to.have.property(\"start_date\");\r",
							"    pm.expect(json).to.have.property(\"shift_count\");\r",
							"    pm.expect(json).to.have.property(\"shifts\");\r",
							"\r",
							"    // Basic sanity checks\r",
							"    pm.expect(json.name).to.eql(\"November Week 1\");\r",
							"    pm.expect(json.shifts).to.be.an(\"array\");\r",
							"});\r",
							"\r",
							"pm.test(\"Shifts were generated correctly\", function () {\r",
							"    const json = pm.response.json();\r",
							"    const shifts = json.shifts;\r",
							"\r",
							"    // Ensure at least one shift was generated\r",
							"    pm.expect(shifts.length, \"Schedule should auto-generate shifts\").to.be.above(0);\r",
							"\r",
							"    // Validate shift_count matches actual shift array length\r",
							"    pm.expect(json.shift_count).to.eql(shifts.length);\r",
							"\r",
							"    // Validate each shift structure\r",
							"    shifts.forEach(shift => {\r",
							"        pm.expect(shift).to.have.property(\"id\");\r",
							"        pm.expect(shift).to.have.property(\"schedule_id\");\r",
							"        pm.expect(shift).to.have.property(\"staff_id\");\r",
							"        pm.expect(shift).to.have.property(\"start_time\");\r",
							"        pm.expect(shift).to.have.property(\"end_time\");\r",
							"        pm.expect(shift).to.have.property(\"clock_in\");\r",
							"        pm.expect(shift).to.have.property(\"clock_out\");\r",
							"\r",
							"        // Check schedule consistency\r",
							"        pm.expect(shift.schedule_id).to.eql(json.id);\r",
							"    });\r",
							"});\r",
							"\r",
							"pm.test(\"Store schedule_id and generated shift_ids\", function () {\r",
							"    const json = pm.response.json();\r",
							"\r",
							"    // Store schedule id\r",
							"    pm.environment.set(\"schedule_id\", json.id);\r",
							"    console.log(\"Stored schedule_id:\", json.id);\r",
							"\r",
							"    // Store all shift IDs (comma-separated or array)\r",
							"    const shiftIds = json.shifts.map(s => s.id);\r",
							"    pm.environment.set(\"schedule_shift_ids\", JSON.stringify(shiftIds));\r",
